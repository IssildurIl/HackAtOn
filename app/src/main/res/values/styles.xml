<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/colorOrange</item>
        <!-- Customize your theme here. -->
<!--        <message name="colorPrimary">@color/colorPrimary</message>-->
<!--        <message name="colorPrimaryDark">@color/colorPrimaryDark</message>-->
<!--        <message name="colorAccent">@color/colorAccent</message>-->
        <item name="colorPrimary">@color/colorOrange</item>
    </style>
    <string-array name="football">
        <item>Команда 1</item>
        <item>Команда 2</item>
        <item>Команда 3</item>
        <item>Команда 4</item>
    </string-array>


    <style name="OrangeButton" style="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/orangeround</item>
<!--        <message name="android:background">@color/colorOrange</message>-->
<!--        <message name="android:background">#C62828</message>-->
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
<!--        <message name="android:textSize">20dp</message>-->
    </style>

    <style name="GayButton" style="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/gayrounded</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <!--        <message name="android:textSize">20dp</message>-->
    </style>


    <style name="OrangeTextInputEditText" style="@style/TextAppearance.AppCompat">
<!--        <message name="colorControlActivated">@color/colorOrange</message>-->
<!--        <message name="colorControlHighlight">@color/colorOrange</message>-->
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textColorHint">@color/colorDarkGray</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:backgroundTint">@color/colorDarkGray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InvisibleText" style="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Prbar">
        <item name="colorAccent">@color/colorOrange</item> <!-- Whatever color you want-->
    </style>

    <style name="BigText" style="@style/TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
